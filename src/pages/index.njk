    <!-- For title text animation in header.njk -->
    <script>
        anime.timeline({loop: false})
        .add({
            targets: '.hero-animation .word',
            scale: [0.75,1],
            opacity: [0,1],
            translateZ: 0,
            easing: "easeOutExpo",
            duration: 300,
            delay: (el, i) => 150 * (i+1)
        }).add({
            targets: '.hero-animation-line',
            // scaleX: [0,1],
            width: [0, '25%'],
            opacity: [0.5,1],
